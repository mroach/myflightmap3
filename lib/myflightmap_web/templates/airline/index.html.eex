<h2 class="title is-2">Airlines</h2>

<div class="block">
  <%= link "New Airline", to: Routes.airline_path(@conn, :new), class: "button is-link" %>
</div>

<table class="table is-fullwidth">
  <thead>
    <tr>
      <th>IATA</th>
      <th>ICAO</th>
      <th>Name</th>
      <th>Commenced on</th>
      <th>Ceased on</th>
      <th>Alliance</th>

      <th></th>
    </tr>
  </thead>
  <tbody>
<%= for airline <- @airlines do %>
    <tr>
      <td><%= airline.iata_code %></td>
      <td><%= airline.icao_code %></td>
      <td><%= emoji_flag(airline.country) %> <%= link(airline.name, to: Routes.airline_path(@conn, :show, airline)) %></td>
      <td><%= airline.commenced_on %></td>
      <td><%= airline.ceased_on %></td>
      <td><%= airline.alliance %></td>

      <td class="text-right">
        <span><%= link "Edit", to: Routes.airline_path(@conn, :edit, airline), class: "btn btn-default btn-xs" %></span>
        <span><%= link "Delete", to: Routes.airline_path(@conn, :delete, airline), method: :delete, data: [confirm: "Are you sure?"], class: "btn btn-danger btn-xs" %></span>
      </td>
    </tr>
<% end %>
  </tbody>
</table>

