<h1>Login</h1>

<div>New? <%= link("Sign up", to: user_path(@conn, :new)) %></div>

<%= form_for @conn, session_path(@conn, :create), [method: "post", as: :session], fn f -> %>
  <%= email_input f, :email, placeholder: "Email" %>
  <%= password_input f, :password, placeholder: "Password" %>
  <%= hidden_input f, :return_to, value: @return_to %>
  <button>Login</button>
<% end %>
